@{
    ViewData["Title"] = "Home Page";
}
<section>
    <div class="text-center mt-3 mb-5">
        <div>
            <h1 class="display-4">WORKBOARD</h1>
        </div>

    </div>

    <article id="menage" class="container mb-5">
        <div class="align-content-start">
            <h4>Menage tasks accross company.</h4>
            <span>Gain a control to fully menage tasks and processes of your company.</span>
        </div>
        <div>
            <img />
        </div>
    </article>

    <article id="workspace" class="container mb-5">
        <div class="align-content-start">
            <h4>Everything in one workspace</h4>
            <span>Planning, tracking and delivering your team’s best work has never been easier</span>
        </div>
        <div>
            <img />
        </div>
    </article>

    <article id="visualize" class="container mb-5">
        <div class="align-content-start">
            <h4>Visualize your work</h4>
            <span>View all the tasks in easy way</span>
        </div>
        <div>
            <img />
        </div>
    </article>

</section>

<footer class="footer text-muted w-auto">
    <div class="d-flex container">
        &copy; WorkBoard @DateTime.Now.Year
        <partial name="_Culture" />
    </div>
</footer>
